<header id="header" data-type="prev">
    <div class="inner">
        <h1 class="page_title"></h1>
        <button class="btn_back" onclick="history.back()">
            <span class="blind">이전 페이지로</span>
        </button>
        <a class="bnt_set_noti" href="">
            <span class="blind">알림 설정</span>
        </a>
    </div>
</header><!-- //header -->

<script>
    $(function(){
        let pathName = document.location.pathname;
        const titleName = $(".page_title");
        const notiSetBnt = $(".bnt_set_noti");
        if(pathName.startsWith("/notice")) {
            titleName.text("공지사항")
        }else if(pathName.startsWith("/inquiry")) {
            titleName.text("1:1 문의하기")
        }else if(pathName.startsWith("/faq")) {
            titleName.text("자주 묻는 질문")
        }else if(pathName.startsWith("/notification")) {
            if (pathName.endsWith("/setting")){
                titleName.text("알림 설정")
            }else {
                titleName.text("알림")
                notiSetBnt.show();
            }
        }
    });
</script>