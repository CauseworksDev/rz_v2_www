<html lang="ko">
  <% include ../inc/head_script.ejs %>
  <link rel="stylesheet" href="/public/test/css/board.css" />
  <script src="/views/user/board/board.js" type="text/javascript"></script>
  <script>
    $(document).ready(function () {
      $('#gpjw_board').addClass('active');
      $('#gpjw_board_mo').addClass('active');
      getContentList(1, 20);
    });
  </script>
  <script>
    $(function () {
      $('.brd_sec_01 #tbl_dataList').on('click', function () {
        $('.popup_img .text_wrap').scrollTop(0);
        $('html').addClass('fixed');
      });
      $('.popup .btn_close').on('click', function () {
        $('html').removeClass('fixed');
      });
      $('.popup .bg').on('click', function () {
        $('html').removeClass('fixed');
      });
    });
  </script>
  <body>
    <div id="wrap">
      <% include ../inc/header %>
      <div id="container">
        <section class="brd_sec_01">
          <div class="inner">
            <h2 class="title">가플지우 소식</h2>
            <h3 class="sub_title">가플지우의 소식을 알아보세요.</h3>
            <div class="list_wrap">
              <ul id="tbl_dataList">
                <li>
                  <div class="list_item">
                    <div class="thum_wrap">
                      <button type="button" onclick="layer_OPEN('.popup_img')">
                        <figure class="item_thum" style="background-image: url(/public/test/images/board/item_thum.jpg)"></figure>
                      </button>
                      <h3 class="item_tag">이미지</h3>
                    </div>
                    <div class="text_wrap">
                      <h2 class="item_title">
                        <button type="button" onclick="layer_OPEN('.popup_img')">띄워쓰기 포함 최대 20자</button>
                      </h2>
                      <p class="item_date">2023.07.11</p>
                    </div>
                  </div>
                </li>
                <li>
                  <div class="list_item">
                    <div class="thum_wrap">
                      <button type="button" onclick="layer_OPEN('.popup_vid')">
                        <figure class="item_thum" style="background-image: url(/public/test/images/board/item_thum.jpg)"></figure>
                      </button>
                      <h3 class="item_tag">동영상</h3>
                    </div>
                    <div class="text_wrap">
                      <h2 class="item_title">
                        <button type="button" onclick="layer_OPEN('.popup_vid')">타이틀 영역</button>
                      </h2>
                      <p class="item_date">2023.07.06</p>
                    </div>
                  </div>
                </li>
                <li>
                  <div class="list_item">
                    <div class="thum_wrap">
                      <button type="button" onclick="layer_OPEN('.popup_card')">
                        <figure class="item_thum" style="background-image: url(/public/test/images/board/item_thum.jpg)"></figure>
                      </button>
                      <h3 class="item_tag">카드뉴스</h3>
                    </div>
                    <div class="text_wrap">
                      <h2 class="item_title">
                        <button type="button" onclick="layer_OPEN('.popup_card')">제목 최대 20자까지만 지원이 가능합니다</button>
                      </h2>
                      <p class="item_date">2023.07.02</p>
                    </div>
                  </div>
                </li>
                <li>
                  <div class="list_item">
                    <div class="thum_wrap">
                      <button type="button" onclick="layer_OPEN('.popup_img')">
                        <figure class="item_thum" style="background-image: url(/public/test/images/board/item_thum.jpg)"></figure>
                      </button>
                      <h3 class="item_tag">이미지</h3>
                    </div>
                    <div class="text_wrap">
                      <h2 class="item_title">
                        <button type="button" onclick="layer_OPEN('.popup_img')">띄워쓰기 포함해서 최대 20자까지만 가능합니다</button>
                      </h2>
                      <p class="item_date">2023.06.29</p>
                    </div>
                  </div>
                </li>
                <li>
                  <div class="list_item">
                    <div class="thum_wrap">
                      <button type="button" onclick="layer_OPEN('.popup_vid')">
                        <figure class="item_thum" style="background-image: url(/public/test/images/board/item_thum.jpg)"></figure>
                      </button>
                      <h3 class="item_tag">동영상</h3>
                    </div>
                    <div class="text_wrap">
                      <h2 class="item_title">
                        <button type="button" onclick="layer_OPEN('.popup_vid')">동영상 제목</button>
                      </h2>
                      <p class="item_date">2023.06.02</p>
                    </div>
                  </div>
                </li>
                <li>
                  <div class="list_item">
                    <div class="thum_wrap">
                      <button type="button" onclick="layer_OPEN('.popup_card')">
                        <figure class="item_thum" style="background-image: url(/public/test/images/board/item_thum.jpg)"></figure>
                      </button>
                      <h3 class="item_tag">카드뉴스</h3>
                    </div>
                    <div class="text_wrap">
                      <h2 class="item_title">
                        <button type="button" onclick="layer_OPEN('.popup_card')">제목</button>
                      </h2>
                      <p class="item_date">2023.05.05</p>
                    </div>
                  </div>
                </li>
              </ul>
              <!-- 모바일에서만 노출될 더보기 버튼 -->
              <div class="btn_wrap">
                <button type="button" class="btn_more" onclick="getContentList('', 10)">더보기</button>
              </div>
              <!-- //모바일에서만 노출될 더보기 버튼 -->
            </div>
            <!-- //list_wrap -->
          </div>
        </section>
      </div>
      <!-- //container -->
      <% include ../inc/footer %>
    </div>
    <!-- //wrap -->

    <div id="popup_all">
      <div class="popup popup_img" style="display: none; filter: alpha(opacity=0); opacity: 0">
        <div class="bg" onclick="layer_CLOSE('.popup_img')"></div>
        <div class="out_layer_box">
          <div class="in_layer_box">
            <div class="flex_box">
              <div class="img_wrap" id="contentImg" style="background-image: url(/public/test/images/board/popup_img.jpg)"></div>
              <div class="text_wrap">
                <h3 class="item_tag">이미지</h3>
                <h2 class="item_title" id="contentImgTitle">제목은 최대 20자까지</h2>
                <p class="item_date" id="contentImgLastDate">2023.05.05</p>
                <pre class="item_desc" id="contentImgText"></pre>
              </div>
            </div>
            <button class="btn_close" onclick="layer_CLOSE('.popup_img')">
              <span class="blind">팝업 닫기</span>
            </button>
          </div>
        </div>
      </div>
      <!-- // popup_img :: 이미지 팝업 -->

      <div class="popup popup_vid" style="display: none; filter: alpha(opacity=0); opacity: 0">
        <div class="bg" onclick="layer_CLOSE('.popup_vid')"></div>
        <div class="out_layer_box">
          <div class="in_layer_box">
            <div class="video_wrap">
              <iframe id="contentVidFrame" width="100%" height="100%" src="" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen> </iframe>
            </div>
            <button class="btn_close" onclick="layer_CLOSE('.popup_vid')">
              <span class="blind">팝업 닫기</span>
            </button>
          </div>
        </div>
      </div>
      <!-- // popup_vid :: 영상 팝업 -->

      <div class="popup popup_card" style="display: none; filter: alpha(opacity=0); opacity: 0">
        <div class="bg" onclick="layer_CLOSE('.popup_card')"></div>
        <div class="out_layer_box">
          <div class="in_layer_box">
            <div class="flex_box">
              <div class="slide_wrap">
                <div class="swiper-container">
                  <div class="swiper-wrapper" id="contentCardSlider">
                    <div class="swiper-slide" style="background-image: url(/public/test/images/board/item_thum.jpg)"></div>
                    <div class="swiper-slide" style="background-image: url(/public/test/images/board/item_thum.jpg)"></div>
                    <div class="swiper-slide" style="background-image: url(/public/test/images/board/item_thum.jpg)"></div>
                    <div class="swiper-slide" style="background-image: url(/public/test/images/board/item_thum.jpg)"></div>
                  </div>
                  <div class="swiper-pagination"></div>
                </div>
              </div>
              <!-- //slide_wrap -->
              <div class="text_wrap">
                <h3 class="item_tag">카드뉴스</h3>
                <h2 class="item_title" id="contentCardTitle">제목</h2>
                <p class="item_date" id="contentCardDate">2023.05.05</p>
              </div>
              <!-- //text_wrap -->
            </div>
            <!-- //item_wrap -->

            <button class="btn_close" onclick="layer_CLOSE('.popup_card')">
              <span class="blind">팝업 닫기</span>
            </button>
          </div>
        </div>
      </div>
      <!-- // popup_card :: 카드뉴스 팝업 -->
    </div>
    <!--// popup -->

    <script>
      $(function () {
        //popup_card swiper setting
        var program_swiper_01 = new Swiper('#popup_all .popup_card .swiper-container', {
          observer: true,
          observeParents: true,
          allowTouchMove: true,
          speed: 500,
          // navigation: {
          //   nextEl: '#popup_all .popup_card .swiper-container .btn_next',
          //   prevEl: '#popup_all .popup_card .swiper-container .btn_prev',
          // },
          pagination: {
            el: '#popup_all .popup_card .swiper-container .swiper-pagination',
            type: 'bullets',
            clickable: true,
          },
          slidesPerView: 1,
          spaceBetween: 0,
        });
      });
    </script>
  </body>
</html>
