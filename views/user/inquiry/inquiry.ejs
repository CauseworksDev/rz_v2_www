<script>
    $(function (){
        //-----faq list toggle-----
        let que = $('.faq_list .que');
        que.on('click',function(){
            if( $(this).parent().hasClass('on') ) {
                $(this).parent().removeClass('on');
                $(this).attr('aria-expanded','false');
                $(this).siblings('.ans').stop().slideUp(300);
            } else {
                $(this).parent().addClass('on');
                $(this).attr('aria-expanded','true');
                $(this).siblings('.ans').stop().slideDown(300);
            }
        });
    });
</script>
<script>
    //-----select ui-----
    $(document).ready(function () {
        $('#inquiryCate').selectmenu({
            appendTo: '#inquiryCateOption',
            position: {my : 'left top', at: 'left bottom+8'},
            width: '100%',
            select: function( event, ui ) {
                let optionIdxNum = ui.item.index;
                optionIdxNum =  optionIdxNum + 1
                $('#inquiryCate-menu li:nth-child(' + optionIdxNum + ')').addClass('active').siblings('li').removeClass('active');
            }
        });
        $("#inquiryCateDetail").selectmenu({
            appendTo: '#inquiryCateDetailOption',
            position: {my : 'left top', at: 'left bottom+8'},
            width: "100%",
            select: function( event, ui ) {
