<script>
    $(function (){
        //-----tab menu-----
        let tab = $('[class^="tab_menu"]');
        tab.on('click',function(evt) {
            evt.stopPropagation();
            evt.preventDefault();
            $(this).attr("title","선택됨")
            $(this).parent('li').addClass('on').attr('aria-selected','true');
            $(this).parent('li').siblings('li').children('a').removeAttr("title");
            $(this).parent('li').siblings('li').removeClass('on').removeAttr('aria-selected');
        });

        //-----comment option btn-----
        let btnCmtOpt = $('.btn_opt');
        btnCmtOpt.on('click',function() {
            $(this).siblings('.opt_wrap').stop().toggle();
        });
        let btnCmtOptDetail = $('.opt_wrap [class^="btn_"]');
        btnCmtOptDetail.on('click',function() {
            $(this).hide();
        });

        //-----cmt bottom textarea change-----
        const cmtBotTextarea = $('.cmt_bot textarea');
        cmtBotTextarea.on('focusin',function() {
            $(this).attr('placeholder','주제와 무관한 댓글은 삭제될 수 있습니다.');
            $(this).addClass('on');
        });
        cmtBotTextarea.on('propertychange change keyup paste input',function() {
            if ($(this).val() === ""){
                $(this).siblings('.btn_cmt').removeClass('on');
            }else {
                $(this).siblings('.btn_cmt').addClass('on');
            }
        });
        cmtBotTextarea.on('focusout',function() {
            if ($(this).val() === ""){
                $(this).removeClass('on');
                $(this).attr('placeholder','댓글을 입력하세요.');
            }
        });

        //-----cmt button on-----
        let cmtTextarea = $('.cmt_wrap textarea');
        cmtTextarea.on('propertychange change keyup paste input',function() {
            if ($(this).val() === ""){
                $(this).siblings('.btn_cmt').removeClass('on');
            }else {
                $(this).siblings('.btn_cmt').addClass('on');
            }
        });

        //-----select ui-----
        $('#reportCate').selectmenu({
            appendTo: '#reportCateOption',
            position: {my: 'left top', at: 'left bottom+8'},
            width: '100%',
            select: function (event, ui) {
                let optionLabel = ui.item.label;
                const reportTextarea = $('#popReport .input_wrap[data-layout="textarea"]');
                if (optionLabel === "기타(입력)"){
                    reportTextarea.show();
                }else {
                    reportTextarea.hide();
                }
            }
        });
    });
</script>
