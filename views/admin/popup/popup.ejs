        // window.location = document.location.href;

    });

    function goDetail(popupId) {
        let url = window.location.protocol + "//" + window.location.host + window.location.pathname
        history.pushState(null, null, url + "?page=" + $("#page_status").val());

        location.href = "/admin/office/popup/detail?popupId=" + popupId;
    }

    function goDetail2() {
        let page = $('.on').text();
        let lang = $('#language').val();
        let no = '';
        $("#status").show()
        location.href = "/admin/office/popup/detail?"
    }

    let getList = function (val) {
        $("#page_status").val(val)
        $("#tbl_dataList").empty();

        let data = {
            status: $('input[name="status_active"]:checked').val(),
            title: $('#title').val(),
            reqWhere: 1,
            pageNo: val,
            numOfRows: 20
        };

        $.ajax({
            url: "/api/popup/v1.0/",
            dataType: "json",
            data: data,
            beforeSend: function (request) {
            },
            type: "get",
            cache: false,
            success: function (result1, s, j) {
                let list = result1.data.items;
                let page = val;
                let row = result1.data.totalCount;
                let language = $("#language").val()
                if (!list || list.length == 0) {
                    let tr = $("<tr/>").append($("<td colspan='11'/>").text("등록된 내용이 없습니다.").css("text-align", "center"));
                    $("#tbl_dataList").append(tr);
                } else {
                    let itemHTMLAddr = '<div class="nk-tb-item nk-tb-head">' +
                        '                                            <div class="nk-tb-col"><span>NO</span></div>\n' +
                        '                                            <div class="nk-tb-col"><span>컨텐츠이름</span></div>\n' +
                        '                                            <div class="nk-tb-col"><span>활성화</span></div>\n' +
                        '                                            <div class="nk-tb-col"><span>등록일</span></div>\n' +
                        '                                            <div class="nk-tb-col"><span>수정일</span></div>\n' +
                        '                                            <div class="nk-tb-col"><span>관리</span></div>\n' +
                        '                                        </div><!-- .nk-tb-item -->';
                    let itemHTMLAddr2 = '';


                    $.each(list, function (idx, item) {
                        let dateReg = '-'
                        if (item.dateReg) {
                            dateReg = getTimeStamp(item.dateReg)
                        }
                        let dateLast = '-'
                        if (item.dateLast) {
                            dateLast = getTimeStamp(item.dateLast)
                        }
                        let title = ""
                        if (item.title) {
                            title = (item.title)
                        }

                        let active = ""
                        let unActiveBtn = `
                        <span class="tb-lead" >
                            <a href="javascript:unActive('${item.popupId}',3)" class="btn btn-lg btn-rounded btn-danger" style="font-size: 13px">
                                삭제
                            </a>
                        </span>
                        `
                        if (item.status == 1) {
                            active = "YES"
                        } else if (item.status == 2) {
                            active = "NO"

                        }


                        itemHTMLAddr = itemHTMLAddr +
                            `<div class="nk-tb-item" >
                                <div class="nk-tb-col">
                                   <span class="tb-sub">${((row - (20 * (page - 1))) - idx)}</span>
                                </div>
                                <div class="nk-tb-col">
                                   <span class="tb-lead"><a href="javascript:goDetail('${item.popupId}')">${textLengthCheck(title, 20)}</a></span>
                                </div>
                                <div class="nk-tb-col">
                                   <span class="tb-sub">${active}</span>
                                </div>
                                <div class="nk-tb-col">
                                   <span class="tb-sub">${dateReg}</span>
                                </div>
                                <div class="nk-tb-col">
                                   <span class="tb-sub">${dateLast}</span>
                                </div>
                                <div class="nk-tb-col">
                                   ${unActiveBtn}
                                </div>
                            </div>`

                    });
                    $("#tbl_dataList").append(itemHTMLAddr);

                    let totalPages = Math.ceil((row / 20));//전체 페이지
                    if (totalPages < 1) {
                        totalPages = 1
                    }
                    let visiblePages = 20;//리스트 보여줄 페이지
                    let startPage = parseInt(val);//현재 페이지
                    let page_data = $('#pagination').data();

                    if (typeof (page_data.twbsPagination) != 'undefined') {
                        if (page_data.twbsPagination.options.totalPages != totalPages) {
                            $('#pagination').twbsPagination('destroy');         //데이터가 갱신되면 페이징 갱신
                        }
                    }
                    $('#pagination').twbsPagination({
                        totalPages: totalPages,
                        visiblePages: visiblePages,
                        startPage: startPage,
                        initiateStartPageClick: false,
                        onPageClick: function (event, val) {
                            getList(parseInt(val));//보고 싶은 페이지
                        }
                    });

                }

            }
        });

    }
    let popupSortUpdate = function () {
        let getSortInfo = $("input[name=sortVal]")
        console.log(getSortInfo)
        let nowSortInfo = {}
        $.each(getSortInfo, function (idx, item) {
            if ($(item).val()) {
                nowSortInfo[$(item).attr("id")] = $(item).val()
            } else {
                nowSortInfo[$(item).attr("id")] = null
            }
        })
        console.log(nowSortInfo)
        let data = {
            sortInfo: nowSortInfo
        }
        $.ajax({
            url: "/api/popup/v1.0/sort/update",
            contentType: "application/json",
            dataType: "json",
            data: JSON.stringify(data),
            type: "put",
            cache: false,
            success: function (result1, s, j) {
                if (result1.result.resultCode == 200) {
                    location.reload()
                }


            }
        });
    }
    let unActive = function (popupId,status) {
        swal({
            title: "확인",
            text: "팝업을 삭제 하시겠습니까?",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        }).then(function (willDelete) {

                if (willDelete) {
                    unActiveContent(popupId,status);
                } else {

                }

            }
        );
    }
    let unActiveContent = function (popupId,status) {
        let rowData = {
            popupId:popupId,
            status:status
        }

        $.ajax({
            url: "/api/popup/v1.0/",
            contentType: "application/json",
            dataType: "json",
            data: JSON.stringify(rowData),
            type: "delete",
            cache: false,
            success: function (result1, s, j) {
                if (result1.result.resultCode == 200) {
                    swal(" success", {
                        icon: "success"
                    }).then(function (value) {
                        location.reload()
                    });
                } else {
                    swal(" fail", {
                        icon: "error"
                    }).then(function (value) {

                    });
                }

            }
        });
    }

</script>
