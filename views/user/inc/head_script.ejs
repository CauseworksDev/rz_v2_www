  let getDayStamp = function (val) {
    let d = new Date(val);
    let s = leadingZeros(d.getFullYear(), 4) + '.' + leadingZeros(d.getMonth() + 1, 2) + '.' + leadingZeros(d.getDate(), 2);

    return s;
  };
  let getMonthStamp = function (val) {
    let d = new Date(val);
    let s = leadingZeros(d.getFullYear(), 4) + '.' + leadingZeros(d.getMonth() + 1, 2);

    return s;
  };
  let getMonthStampToString = function (val) {
    let d = new Date(val);
    let s = '*' + leadingZeros(d.getFullYear(), 4) + '년 ' + leadingZeros(d.getMonth() + 1, 2) + '월 기준';

    return s;
  };

  function numberWithCommas(x) {
    if (x) {
      return x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ',');
    } else {
      return '0';
    }
  }

  function textLengthCheck(str, len) {
    let returnValue = '';
    if (!len || len == '') {
      return str;
    }
    if (str) {
      if (str.length > len) {
        returnValue = str.substring(0, len) + '...';
      } else {
        returnValue = str;
      }
    } else {
      return '';
    }

    return returnValue;
  }
